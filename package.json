{
  "name": "pw",
  "version": "1.0.0",
  "description": "Intuitive cross-platform command line password manager",
  "license": "GPL-3.0-only",
  "author": {
    "name": "gnosec",
    "url": "https://github.com/gnosec"
  },
  "repository": "git@github.com/gnosec/pw",
  "bugs": {
    "url": "https://github.com/gnosec/pw/issues"
  },
  "scripts": {
    "clean": "rimraf bin",
    "build": "npm run test && npm run clean && pkg lib/pw.js --targets node8-linux-x64,node8-macos-x64,node8-win-x64 --out-path bin",
    "test": "jest",
    "cover": "jest --coverage --collectCoverageFrom=lib/**/*.{js}",
    "format-code": "prettier --write --single-quote"
  },
  "bin": {
    "pw": "lib/pw.js"
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "commander": "^2.15.0",
    "copy-paste": "^1.3.0",
    "crypto-js": "^3.1.9-1",
    "get-parameter-names": "^0.3.0",
    "inquirer": "^5.1.0",
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "request": "^2.88.0",
    "semver": "^5.5.0",
    "treeify": "^1.1.0",
    "vorpal": "^1.12.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "husky": "^1.0.0-rc.14",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.2",
    "npm": "^6.4.1",
    "pkg": "^4.3.4",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "npm run format-code",
      "git add"
    ]
  }
}
